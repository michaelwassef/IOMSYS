@model IOMSYS.Models.AccessModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
            background-color: #f4f6f9;
        }

        .login-box {
            margin-top: 5%;
            padding: 20px;
            background-color: #fff; 
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        }

        .login-logo a {
            color: #333;
        }

        .form-control {
            border-radius: 20px; 
            padding: 20px 10px;
            margin-bottom: 10px; 
        }

        .form-control2 {
            border-radius: 20px;
        }

        .btn-primary {
            border-radius: 20px; 
            padding: 10px 20px;
            font-size: 16px; 
        }
    </style>
</head>
<body>
    <div class="container"> 
        <div class="row justify-content-center">
            <div class="col-md-6 login-box">
                <div class="login-logo">
                    <h3 class="text-center mb-4">تسجيل الدخول</h3>
                </div>
                @if (TempData["ValidateMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ValidateMessage"]
                    </div>
                }
                <form asp-controller="Access" asp-action="Login" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="UserName" asp-for="UserName" placeholder="اسم الدخول" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="Password" asp-for="Password" placeholder="كلمة المرور" required>
                    </div>
                    <div class="form-group">
                        <select asp-for="UserTypeId" class="custom-select form-control2">
                            <option value="1">مدير عام</option>
                            <option value="2">مدير فرع</option>
                            <option value="3">موظف</option>
                        </select>
                        <span class="text-danger" asp-validation-for="UserTypeId"></span>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">دخول</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

