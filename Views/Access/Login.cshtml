@model IOMSYS.Models.AccessModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DEMO store</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/login.css">
    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
            background-color: #f8f9fa;
        }
        .alert {
            max-width: 320px;
        }
        .zoomed-logo {
            transform: scale(2);
        }
    </style>
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-6">
                        <img src="/login.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="/logo-black.png" alt="logo" class="logo zoomed-logo">
                            </div>
                            <p class="login-card-description">Sign into your account...</p>
                            @if (TempData["ValidateMessage"] != null)
                            {
                                <div class="alert alert-danger text-right">
                                    @TempData["ValidateMessage"]
                                </div>
                            }
                            <form asp-controller="Access" asp-action="Login" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control text-right" name="UserName" asp-for="UserName" placeholder="اسم الدخول" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control text-right" name="Password" asp-for="Password" placeholder="كلمة المرور" required>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-block login-btn mb-4" type="submit">دخول</button>
                                </div>
                            </form>
                            <nav class="login-card-footer-nav">
                                <a href="https://www.instagram.com/m.w.software">By MW SoftWare</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var validationMessage = document.querySelector(".alert");
        if (validationMessage) {
            setTimeout(function () {
                validationMessage.style.display = "none"; // Hide the message
            }, 5000);
        }
    });
</script>